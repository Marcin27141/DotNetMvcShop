@model DotnetList5Task2.Models.Shop.Article

@{
    ViewData["Title"] = "Edit";
}

@section styles {
    <link rel="Stylesheet" href="~/css/form_styling.css" />
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden class="form-control" />

            @await Html.PartialAsync("_ArticleProperties", Model)
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
