@page
@model ShopRazor.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@section styles {
    <link rel="Stylesheet" href="~/css/single_result_v2.css" />
}

<div class="single-result">
    <h1>@Model.Category.Name</h1>
    <div class="key-value-result">
        <h2>Name</h2>
        <h4>@Model.Category.Name</h4>
    </div>
    <div class="key-value-result">
        <h2>Id</h2>
        <h4>@Model.Category.Id</h4>
    </div>
    <div class="key-value-result">
        <h2>Is Promo?</h2>
        <h4>@Model.Category.IsPromo</h4>
    </div>
</div>

<div class="return-link">
    <a asp-page="Index">Back to List</a>
</div>
